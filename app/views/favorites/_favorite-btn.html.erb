<% if favo = Favorite.find_by(user_id: current_user.id, book_id: book.id) %>
    <%= link_to "♥#{book.favorites.count}", book_favorites_path(book.id, favo.id), {method: :delete, class: "favorited", remote: true} %>
<% else %>
     <%= link_to "♥#{book.favorites.count}", book_favorites_path(book.id), method: :post, remote: true %>
<% end %>