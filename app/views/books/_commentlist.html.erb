<% book.book_comments.each do |comment| %>
    <div class="comment-box">
        <div class="comment-user">
            <%= link_to user_path(comment.user) do %>
            <%= attachment_image_tag comment.user, :profile_image, fallback: "no-image-icon.jpg", size: "50x50" %><br>
            <%= comment.user.name %>
            <% end %>
        </div>
        <div class="comment-text">
            <%= comment.comment %>
        </div>
        <% if comment.user == current_user %>
        <div class="comment-delete-button">
            <%= link_to 'Destroy', book_book_comment_path(comment.book.id, comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
        </div>
        <% end %>
    </div>
<% end %>