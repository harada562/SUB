<% books.each do |book| %>
  <div class="books_index">
      <%= link_to user_path(book.user) do %>
        <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
      <% end %>
      <div class="pt-3 pl-5 w-100 books_index_items">
        <p class="h1 pb-3"><span><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></span></p>
        <p class="h3"><%= book.body %></p>
        <div class="d-flex justify-content-end">
          <p id="favorite-btn-<%= book.id %>" class="pr-4 h4">
            <%= render "favorites/favorite-btn", book: book %>
          </p>
          <p class="h4">コメント数: <%= book.book_comments.count %></p>
        </div>
      </div>
  </div>
<% end %>